@{
    ViewData["Title"] = "Home";
}

<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('https://th.bing.com/th/id/OIP.Qe5hUMvIUD4A_G9nWvtXPQHaE8?rs=1&pid=ImgDetMain'); background-size: cover; background-position: center; background-repeat: no-repeat; z-index: -1;">
    <!-- Overlay for background -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.6); z-index: 0;"></div>
</div>

<!-- Content Section -->
<div class="container-fluid d-flex flex-column justify-content-center align-items-center text-center" style="position: relative; z-index: 2; height: 100vh; color: white; padding-top: 0;">
    <div class="content" style="z-index: 2; position: relative;">
        <!-- Heading and Paragraph in the center of the page -->
        <h1 class="display-4 font-weight-bold text-shadow">Welcome to the Library Management System</h1>
        <p class="lead font-weight-bold text-shadow" style="margin-top: 20px;">Manage your books, borrow items, and much more!</p>
    </div>

    <!-- Button Grid with Flexbox to arrange buttons in a column -->
    <div class="row text-center" style="width: 100%; margin-top: 30px;">
        @if (User.Identity.IsAuthenticated)
        {
            <!-- Manage Books Button -->
            <div class="col-md-12 mb-3 d-flex justify-content-center">
                <a href="/Books/Index" class="btn btn-sm btn-outline-light rounded-pill shadow-lg w-50" style="font-size: 18px;">
                    <i class="fa fa-book"></i> Books List
                </a>
            </div>

            <!-- Borrow Items Button -->
            <div class="col-md-12 mb-3 d-flex justify-content-center">
                <a href="/Borrow/History" class="btn btn-sm btn-outline-light rounded-pill shadow-lg w-50" style="font-size: 18px;">
                    <i class="fa fa-arrow-circle-right"></i> Borrow History
                </a>
            </div>

            <!-- User Profile Button -->
            <div class="col-md-12 mb-3 d-flex justify-content-center">
                <a href="/Profile/Index" class="btn btn-sm btn-outline-light rounded-pill shadow-lg w-50" style="font-size: 18px;">
                    <i class="fa fa-user-circle"></i> View Profile
                </a>
            </div>

            <!-- Admin Dashboard Button -->
            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-12 mb-3 d-flex justify-content-center">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-sm btn-outline-light rounded-pill shadow-lg w-50" style="font-size: 18px;">
                        <i class="fa fa-cogs"></i> Admin Dashboard
                    </a>
                </div>
            }
        }
        else
        {
            <!-- Register Now Button with Full Width -->
            <div class="col-md-12 text-center mt-4">
                <a href="@Url.Action("Register", "Account")" class="btn btn-sm btn-success rounded shadow-lg w-auto" style="font-size: 20px;">
                    <i class="fa fa-user-plus"></i> Register Now
                </a>
            </div>

        }
    </div>
</div>
